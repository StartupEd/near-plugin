@*@page "/certificates/{CertificateId}"*@
@if (IsCertificateShow)
{
    <div class="modal fade show d-block" id="claimedCertificateModal" tabindex="-1" role="dialog" aria-labelledby="claimedCertificateLevel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">

            <div class="modal-content">
                <div class="modal-header">   
                    <h5 class="modal-title" id="claimedCertificateLevel">Certificate Preview</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="() => OnButtonCloseClick(false)">
                            <i aria-hidden="true" class="ki ki-close"></i>
                        </button>                                         
                    </div>
                <div class="modal-body p-5" style="overflow-y:scroll; max-height:550px;">
                    <div class="card card-custom overflow-hidden">
                        <div class="card-body p-0">

                            <div class="row justify-content-center py-8 px-8 pb-md-10 px-md-0">
                                <div class="col-md-9">
                                    <div class="d-flex flex-column align-items-center px-0">
                                        <img src="_content/OneUX/assets/imgs/StartupEd-Logo-Min.png" alt="logo">
                                    </div>
                                    <div class="d-flex justify-content-between pt-2">
                                        <div class="d-flex flex-column px-0">
                                            <span class="pt-6">@Certificate.Core.CreatedAt.ToString("dd-MMMM-yyyy")</span>
                                        </div>
                                        <div class="d-flex flex-column symbol symbol-60 px-0">
                                            @if (@Certificate.CoverImage != null)
                                            {
                                                <img src="@Certificate.CoverImage" alt="coverImg">
                                            }
                                            else
                                            {
                                                <img src="https://s1.startuped.net/incubation_cloud/assets/media/users/default.jpg" alt="coverImg">
                                            }
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mt-5 px-0">
                                        <span class="font-size-h3">This certificate is proudly presented to</span>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center mt-5 px-0">
                                        <span style="font-family:'Brush Script MT', cursive;font-size:40px">@Certificate.Name</span>
                                    </div>
                                    <hr class="border-2 m-0">
                                </div>
                            </div>

                            <div class="row justify-content-center py-8 px-8 px-md-0">
                                <div class="col-md-9">
                                    <div class="d-flex flex-column align-items-center px-0">
                                        <span class="font-weight-bolder" style="font-size:28px">For exhibiting exemplary performance.</span>
                                    </div>
                                </div>
                            </div>

                            <div class="row justify-content-between py-8 px-8 py-md-10 px-md-0">
                                <div class="col-md-12">
                                    <div class="d-flex justify-content-center pt-2">                                       
                                            <img src="@Certificate.CoverImage" alt="EventImg">                                       
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
                                <div class="col-md-9 ">
                                    <div class="d-flex justify-content-between">
                                        <button type="button" class="btn btn-light-primary font-weight-bold" onclick="window.print();">Download</button>
                                        <button type="button" class="btn btn-primary font-weight-bold" onclick="window.print();">Print</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-none">
                    
                </div>
            </div>

            @*<div class="d-flex flex-column-fluid">
                <div class="container">                    
                    
                </div>               
            </div>*@
        </div>
    </div>
}



