<div class="d-flex align-items-center justify-content-between  mb-3">
    <a class="list-group-item list-group-item-action border-0" href="" @onclick="SubmitChatThreadModel" @onclick:preventDefault>
        <div class="d-flex align-items-center">
            <div class="symbol symbol-circle symbol-45 mr-3">
                @if (!string.IsNullOrEmpty(Profile.AvatarImageUrl))
                {
                    <a href="profile/@User.Id" class="symbol-label" style="background-image: url('@Profile.AvatarImageUrl')"></a>
                }
                else
                {
                    <a href="profile/@User.Id" class="symbol-label" style="background-image: url('https://s1.startuped.net/incubation_cloud/assets/media/users/default.jpg')"></a>
                }
            </div>
            <div class="d-flex flex-column">
                <label class="text-dark-75 navi-text font-weight-bold font-size-h5">@User.Name</label>
                <span class="text-muted font-weight-bold font-size-sm"></span>
            </div>
        </div>
    </a>
        <div class="d-flex flex-column align-items-end">
            @*<span class="text-muted font-weight-bold font-size-sm"></span>*@
            @*<span class="label label-sm label-danger"></span>*@
        </div>    
</div>

