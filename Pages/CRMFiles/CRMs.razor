                                            </g>
                                        </svg>
                                    </span>
                                </span>
                            </div>
                            @*<input type="text" class="form-control " @bind="@SearchString" @bind:event="oninput" placeholder="Search.." />*@
                        </div>
                    </div>
                    <!--begin::Button-->
                    <button type="button" class="btn btn-sm btn-secondary btn-hover-secondary" data-toggle="modal" data-target="#crmModal">
                        <i class="far fa-plus-square"></i>&nbsp;Create
                    </button>
                    @*< OnProjectUpdated="LoadData"></>*@
                    <CRMModal _ClientService="_ClientService" LoadDataCallBack="LoadCRMs"></CRMModal>
                    <!--end::Button-->
                </div>
            </div>
        </div>

        @if (Models != null & Models.Count > 0)
        {
