<div class="d-flex mb-9">
    <div class="flex-shrink-0 mr-7 mt-lg-0 mt-3">
        <a href="event/detail/@Model.Id" class="symbol symbol-100">
            @if (Model.CoverImage != null)
            {
                <img src="@Model.CoverImage" alt="coverImg">
            }
            else
            {
                <img src="https://s1.startuped.net/incubation_cloud/assets/media/users/default.jpg" alt="coverImg">

            }
        </a>
    </div>
    <div class="d-flex flex-column justify-content-between flex-grow-1">
        <div class="d-flex justify-content-between flex-wrap">
            <div class="d-flex mr-3">
                <a href="community/@Model.Id/@Model.Name" class="text-dark-75 text-hover-primary font-size-h5 font-weight-bold mr-3">@Model.Name</a>
            </div>
            <div class="d-flex flex-column ml-0 mt-1">
                <div class="d-flex justify-content-between flex-wrap mt-1">
                    <div class="d-flex mb-0">
                        <h4 class="text-dark-50 font-weight-bolder">Description:</h4>
                    </div>
                    <div class="my-lg-0 my-3 mr-4">
                        
                        
                    </div>
                </div>
                <p class="text-dark-50 font-weight-bold mt-2 mb-lg-0">
                    @((MarkupString)Model.Description)
                </p>
            </div>


        </div>
    </div>
</div>
<div class="separator separator-solid mb-9"></div>


