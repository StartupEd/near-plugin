@page "/search/results/Members/Keyword/{Query}/{Page:int}"
<OneUX_SubHeader />
<Head Title="Users"></Head>
<div class="d-flex flex-column-fluid">
    <div class="container">
        @if (AllUserInfo != null && AllUserInfo.Count > 0)
        {
            @if (AllUserInfo.Count > 0)
            {
                UserCount = 0;

                <div class="card card-custom gutter-b">
                    <div class="card-header py-5">
                        <h3 class="card-title font-weight-bolder text-dark">MEMBERS</h3>
                    </div>
                    <div class="card-body">
                        @foreach (var user in AllUserInfo)
                        {
                            <SearchedUserCard Data="user" />
                        }

                    </div>
                </div>
            }
        }
    </div>
</div>

<div class="example-preview">
    <!--begin::Pagination-->
    <div class="d-flex justify-content-between align-items-center flex-wrap">
        <div class="d-flex flex-wrap py-2 mr-3">
            @*<a href="#" class="btn btn-icon btn-sm btn-light mr-2 my-1">
                <i class="ki ki-bold-double-arrow-back icon-xs"></i>
            </a>*@
            <a href="search/results/Members/Keyword/@Query/@PreviousPage" class="btn btn-icon btn-sm btn-light mr-2 my-1">
                <i class="ki ki-bold-arrow-back icon-xs"></i>
            </a>

            @for (int i = 1; i <= totalPages; i++)
            {
                <a href="search/results/Members/Keyword/@Query/@i" class="btn btn-icon btn-sm border-0 btn-light mr-2 my-1">@i</a>
                
            }

            @*<a href="search/results/Members/Keyword/@Query/2" class="btn btn-icon btn-sm border-0 btn-light btn-hover-primary active mr-2 my-1">2</a>*@

