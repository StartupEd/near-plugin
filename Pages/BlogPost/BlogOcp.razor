@page "/blog/create"
@page "/blog/{Id}/{Name}/edit"

<Head Title="Jobs" />

<div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <a href="/" class="text-dark font-weight-bold my-1 mr-5">Home</a>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    @if (Id != null)
                    {
                        <li class="breadcrumb-item">
                            <a href="blog" class="text-muted">Blogs</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="blog/@Model.Id/@Model.Name" class="text-muted">Detail</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="blog/@Model.Id/@Model.Name/edit" class="text-muted">Edit</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-column-fluid">
    <div class="container">
        <EditForm class="form" id="jobPostingForm" Model="@Model" OnValidSubmit="SubmitInfo">
            <CascadingValue Value="@FormElementStyle" Name="FormInput Class">
                <CascadingValue Value="@InputElementStyle" Name="Input Class">
                    <CascadingValue Value="@LabelStyle" Name="Label Class">
                        <CascadingValue Value="@ElementWrapperStyle" Name="Wrapper Class">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <div class="card card-custom card-sticky" id="kt_page_sticky_card">
                                <div class="card-header" style="z-index: 90; top: 119px; left: 386px; right: 121px;">
                                    <div class="card-title">
                                        <h3 class="card-label">
                                            Create a Blog Post
                                        </h3>
                                    </div>
                                    <div class="card-toolbar">
                                        <a href="/blog" class="btn btn-light-secondary font-weight-bolder mr-2">
                                            <i class="icon-sm"></i>Cancel
                                        </a>
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-secondary font-weight-bolder submitFormBtn">
                                                Submit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2"></div>
                                        <div class="col-8">
                                            <OneUX_InputBox @bind-Value="Model.Name" Label="Header" PlaceholderText="Enter blog Title" StarValidation="@Validation" />
                                            <OneUX_ImageInputBox ReturnImgbase64="Imagebase64" CustomWidth="100%" CustomHeight="250px" Size="700" ImageDataUrl="@Model.CoverImage" Label="CoverImage" />
                                            <OneUX_QuillEditor ElementId="blogSummary" PlaceholderText="Description" Label="Description" Summary="@Model.BlogSummary" StarValidation="@Validation" />
                                        </div>
                                        <div class="col-2"></div>
                                    </div>
                                </div>
                            </div>
                        </CascadingValue>
                    </CascadingValue>
                </CascadingValue>
            </CascadingValue>
        </EditForm>
    </div>
</div>


