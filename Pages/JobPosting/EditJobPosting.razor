@page "/job/{Id}/{Name}/edit"
    <!--begin::Card-->
<Head Title="Jobs" />

<div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">
            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <a href="/" class="text-dark font-weight-bold my-1 mr-5">Home</a>
                <!--end::Page Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="/businesspage" class="text-muted">Job Postings</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="job/@Id/@Name" class="text-muted">Detail</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="job/@Id/@Name/edit" class="text-muted">Edit</a>
                    </li>
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <!--end::Toolbar-->
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class="container">
        <EditForm class="form" id="jobPostingForm" Model="@Model" OnValidSubmit="SubmitInfo">
            <CascadingValue Value="@FormElementStyle" Name="FormInput Class">
                <CascadingValue Value="@InputElementStyle" Name="Input Class">
                    <CascadingValue Value="@LabelStyle" Name="Label Class">
                        <CascadingValue Value="@ElementWrapperStyle" Name="Wrapper Class">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <div class="card card-custom card-sticky" id="kt_page_sticky_card">
                                <div class="card-header" style="z-index: 90; top: 119px; left: 386px; right: 121px;">
                                    <div class="card-title">
                                        <h3 class="card-label">
                                            Job Posting
                                        </h3>
                                    </div>
                                    <div class="card-toolbar">
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-primary font-weight-bolder" id="updateJobPostingBtn">
                                                <i class="icon-sm"></i>Save
                                            </button>
                                        </div>
                                        <a href="job/@Id/@Name" class="btn btn-light-primary font-weight-bolder mr-2" id="cancelJobPostingLink">
                                            <i class="icon-sm"></i>Cancel
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2"></div>
                                        <div class="col-8">
                                            <OneUX_MultiSelect Label="Job Title" ElementId="jobTitle" PlaceholderText="Enter job title" StarValidation="@Validation" MultipleValues="multiple" Data="JobName">
                                                @foreach (var title in JobTitle)
                                                {
                                                    <option value="@title">@title</option>
                                                }

                                            </OneUX_MultiSelect>
                                            <OneUX_InputSelect @bind-Value="Model.EmploymentType" Label="Employment Type" Id="employmentTypeList" Title="Select Employment Type" StarValidation="@Validation" Data="@Model.EmploymentType">
                                                @foreach (var type in EmploymentType)
                                                {
                                                    <option value=@type>@type</option>
                                                }
                                            </OneUX_InputSelect>
                                            <OneUX_InputBox @bind-Value="Model.Experience" Label="Job Experience" PlaceholderText="Enter required Experience" />
                                            <OneUX_InputBox @bind-Value="Model.Salary" Label="Salary" PlaceholderText="Enter salary" />
                                            <OneUX_QuillEditor ElementId="jobPostingAbout" PlaceholderText="Description" Label="Description" Summary="@Model.Description" StarValidation="@Validation" />
                                        </div>
                                        <div class="col-2"></div>
                                    </div>
                                </div>
                            </div>
                        </CascadingValue>
                    </CascadingValue>
                </CascadingValue>
            </CascadingValue>
        </EditForm>
    </div>
</div>


