@page "/{BusinessPageId}/{BusinessPageName}/job/create"
@using Microsoft.AspNetCore.SignalR.Client

<Head Title="Jobs" />

<div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <a href="/" class="text-dark font-weight-bold my-1 mr-5">Home</a>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-column-fluid">
    <div class="container">
        <EditForm class="form" id="jobPostingForm" Model="@Model" OnValidSubmit="SubmitInfo">
            <CascadingValue Value="@FormElementStyle" Name="FormInput Class">
                <CascadingValue Value="@InputElementStyle" Name="Input Class">
                    <CascadingValue Value="@LabelStyle" Name="Label Class">
                        <CascadingValue Value="@ElementWrapperStyle" Name="Wrapper Class">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <div class="card card-custom card-sticky" id="kt_page_sticky_card">
                                <div class="card-header" style="z-index: 90; top: 119px; left: 386px; right: 121px;">
                                    <div class="card-title">
                                        <h3 class="card-label">
                                            Job Posting
                                        </h3>
                                    </div>
                                    <div class="card-toolbar">
                                        <a href="/businesspage" class="btn btn-light-secondary font-weight-bolder mr-2">
                                            <i class="icon-sm"></i>Cancel
                                        </a>
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-secondary font-weight-bolder submitFormBtn">
                                                Submit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-2"></div>
                                        <div class="col-8">
                                            <OneUX_MultiSelect Label="Job Title" ElementId="jobTitle" PlaceholderText="Enter job title" StarValidation="@Validation" MultipleValues="multiple">

                                                @foreach (var title in JobTitle)
                                                {
                                                    <option value="@title">@title</option>
                                                }

                                            </OneUX_MultiSelect>
                                            <OneUX_InputSelect @bind-Value="Model.EmploymentType" Label="Employment Type" Id="employmentTypeList" Title="Select Employment Type" StarValidation="@Validation">
                                                @foreach (var type in EmploymentType)
                                                {
                                                    <option value=@type>@type</option>
                                                }
                                            </OneUX_InputSelect>
                                            <OneUX_InputBox @bind-Value="Model.Experience" Label="Job Experience" PlaceholderText="Enter required Experience" />
                                            <OneUX_InputBox @bind-Value="Model.Salary" Label="Salary" PlaceholderText="Enter salary" />
                                            <OneUX_QuillEditor ElementId="jobPostingAbout" PlaceholderText="Description" Label="Description" Summary="@Model.Description" StarValidation="@Validation" />
                                        </div>
                                        <div class="col-2"></div>
                                    </div>
                                </div>
                            </div>
                        </CascadingValue>
                    </CascadingValue>
                </CascadingValue>
            </CascadingValue>
        </EditForm>
    </div>
</div>


