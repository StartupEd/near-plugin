@page "/settings/plan/{UserId}"
@using StartupEd.Engine.MarketNetwork

<div class="flex-row-fluid ml-lg-8">
    <!--begin::Section-->
    <div class="card card-custom gutter-b">
        <!--begin::Header-->
        <div class="card-header flex-wrap border-0 pt-6 pb-0">
            <h3 class="card-title align-items-start flex-column">
                <span class="card-label font-weight-bolder font-size-h3 text-dark">My Plans</span>
            </h3>

        </div>
        <!--end::Header-->
        <div class="card-body">
            <!--begin::Shopping Cart-->
            <div class="table-responsive">
                <table class="table">
                    <!--begin::Cart Header-->
                    <thead>
                        <tr>
                            <th>Plan</th>
                            <th class="text-center">Validity</th>
                            <th class="text-center">Days Left</th>
                            <th class="text-right">Price</th>
                        </tr>
                    </thead>
                    <!--end::Cart Header-->
                    <tbody>
                        <!--begin::Cart Content-->
                        <tr>
                            <td class="d-flex align-items-center font-weight-bolder">
                                <a class="text-dark">@AuthModel.Plan</a>
                            </td>
                            @if (AuthModel.Duration == "Monthly")
                            {
                                <td class="text-center align-middle">30 days</td>
                            }
                            else
                            {
                                <td class="text-center align-middle">365 days</td>
                            }

                        <td class="text-center align-middle">@DaysLeft.Days</td>

                            @if (AuthModel.Currency == "USD")
                            {

                                <td class="text-right align-middle font-weight-bolder font-size-h5">$@AuthModel.PlanPrice</td>
                            }
                            else
                            {
                                <td class="text-right align-middle font-weight-bolder font-size-h5">&#8377;@AuthModel.PlanPrice</td>
                            }
                        </tr>
                        <tr>
                            <td colspan="2" class="border-0 pt-10">
                            </td>
                            <td colspan="2" class="border-0 text-right pt-10">
                                <a href="upgrade" class="btn btn-secondary font-weight-bolder px-8 upgradeBtn">Change Plan</a>
                            </td>
                        </tr>
                        <!--end::Cart Footer-->
                    </tbody>
                </table>
            </div>
            <!--end::Shopping Cart-->
        </div>
    </div>
    <!--end::Section-->
    <!--begin::Section-->
    <!--end::Section-->
</div>



