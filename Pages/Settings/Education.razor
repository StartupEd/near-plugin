@page "/settings/educationdetails/{UserId}"

<div class="flex-row-fluid ml-lg-8">
    <div class="card card-custom">
        <div class="card-header py-3">
            <div class="card-title align-items-start flex-column">
                <h3 class="card-label font-weight-bolder text-dark">Education Details</h3>
                <span class="text-muted font-weight-bold font-size-sm mt-1">Update your education details</span>
            </div>
            <div class="card-toolbar">
            </div>
        </div>
        <EditForm class="form" novalidate="novalidate" id="profileInfo" Model="@Model" OnValidSubmit="SubmitInfoAsync">
            <div class="card-body">
                <CascadingValue Value="@FormElementStyle" Name="FormInput Class">
                    <CascadingValue Value="@InputElementStyle" Name="Input Class">
                        <CascadingValue Value="@LabelStyle" Name="Label Class">
                            <CascadingValue Value="@ElementWrapperStyle" Name="Wrapper Class">
                                <OneUX_MultiSelect Label="School" ElementId="schoolList" PlaceholderText="Enter School" MultipleValues="multiple" Data="Model.Education.School">
                                    @foreach (var school in SchoolList)
                                    {
                                        <option value=@school>@school</option>
                                    }
                                </OneUX_MultiSelect>

                                <OneUX_MultiSelect Label="College" ElementId="collegeList" PlaceholderText="Enter College" MultipleValues="multiple" Data="Model.Education.College">
                                    @foreach (var college in CollegeList)
                                    {
                                        <option value=@college>@college</option>
                                    }
                                </OneUX_MultiSelect>

                                <OneUX_MultiSelect Label="Degree (No Grade)" ElementId="degreeList" PlaceholderText="Enter Degree" MultipleValues="multiple" Data="Model.Education.Degree">
                                    @foreach (var stream in DegreeList)
                                    {
                                        <option value=@stream>@stream</option>
                                    }
                                </OneUX_MultiSelect>
                            </CascadingValue>
                        </CascadingValue>
                    </CascadingValue>
                </CascadingValue>
                <div class="d-flex justify-content-between pt-3">
                    <div class="mr-2">
                        <button type="button" class="btn btn-light-primary font-weight-bolder font-size-h6 pl-6 pr-8 py-4 my-3 mr-3" @onclick="HandleClick">
                            <span class="svg-icon svg-icon-md mr-1">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <polygon points="0 0 24 0 24 24 0 24" />
                                        <rect fill="#000000" opacity="0.3" transform="translate(15.000000, 12.000000) scale(-1, 1) rotate(-90.000000) translate(-15.000000, -12.000000)" x="14" y="7" width="2" height="10" rx="1" />
                                        <path d="M3.7071045,15.7071045 C3.3165802,16.0976288 2.68341522,16.0976288 2.29289093,15.7071045 C1.90236664,15.3165802 1.90236664,14.6834152 2.29289093,14.2928909 L8.29289093,8.29289093 C8.67146987,7.914312 9.28105631,7.90106637 9.67572234,8.26284357 L15.6757223,13.7628436 C16.0828413,14.136036 16.1103443,14.7686034 15.7371519,15.1757223 C15.3639594,15.5828413 14.7313921,15.6103443 14.3242731,15.2371519 L9.03007346,10.3841355 L3.7071045,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(9.000001, 11.999997) scale(-1, -1) rotate(90.000000) translate(-9.000001, -11.999997)" />
                                    </g>
                                </svg>
                            </span>Previous
                        </button>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary font-weight-bold text-uppercase px-9 py-4">
                            Complete
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>

    </div>
</div>


