@page "/email-verification"

<div class="d-flex flex-row-fluid flex-center">
    <div class="login-forgot">
        <div class="text-center mb-10 mb-lg-20">
            <h3 class="">We have sent you an email for email verification</h3>
            <p class="text-muted font-weight-bold font-size-h4">
                If you don't see our email in your inbox, check your spam folder.
            </p>
        </div>
        <div class="form-group d-flex flex-wrap flex-center mt-10">
            <button type="submit" class="btn btn-primary btn-pill font-weight-bold px-9 py-4 my-3 mx-2" @onclick="Login">Sign In</button>
            <span>Or</span>
            <button type="submit" class="btn btn-primary btn-pill font-weight-bold px-9 py-4 my-3 mx-2" @onclick="ResendVerificationEmail">Resend</button>
        </div>
    </div>
</div>

@code{
    public void Login()
    {
        navigationManager.NavigateTo("/login/");
    }
    public void ResendVerificationEmail()
    {
        navigationManager.NavigateTo("/resend-verification-email/");
    }
}