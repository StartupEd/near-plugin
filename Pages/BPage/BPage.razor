@page "/businesspage/{Id}"

<OneUX_SubHeader IsInviteShow="true" />
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="d-flex flex-row">
            <div class="row w-100">
                <div class="col-lg-12">
                    <div class="card card-custom gutter-b">
                        <div class="card-body pb-3">
                            <div class="d-flex mb-9">
                                <div class="flex-shrink-0 mr-7 mt-lg-0 mt-3">
                                    <div class="symbol symbol-50 symbol-lg-100">
                                        @if (Model.CoverImage != null)
                                        {
                                            <img src="@Model.CoverImage" alt="image" />
                                        }
                                        else
                                        {
                                            <img src="https://s1.startuped.net/incubation_cloud/assets/media/users/default.jpg" alt="image" />
                                        }
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between flex-wrap mt-1">
                                        <div class="d-flex mr-3">
                                            <a class="text-dark-75 text-hover-primary font-size-h5 font-weight-bold mr-3">@Model.Name</a>
                                            <span class="label label-light-success label-inline font-weight-bolder mr-1">@Model.Category</span>
                                        </div>
                                        <div class="my-lg-0 my-3">
                                            <a href="#" class="btn btn-sm btn-outline-primary font-weight-bolder text-uppercase mr-3">
                                                <i class="far fa-thumbs-up"></i>
                                                Like
                                            </a>
                                            <a href="#" class="btn btn-sm btn-outline-primary font-weight-bolder text-uppercase mr-3">
                                                Follow
                                            </a>
                                            <a href="#" class="btn btn-sm btn-primary font-weight-bolder text-uppercase">
                                                <i class="fa fa-envelope-open-text"></i>
                                                Share
                                            </a>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-wrap justify-content-between mt-1">
                                        <div class="d-flex flex-column flex-grow-1 pr-8">
                                            <div class="d-flex flex-wrap mb-4">
                                                <a href="#" class="text-dark-50 text-hover-primary font-weight-bold mr-lg-8 mr-5 mb-lg-0 mb-2"><i class="flaticon2-new-email mr-2 font-size-lg"></i></a>
                                                <a href="#" class="text-dark-50 text-hover-primary font-weight-bold"><i class="flaticon2-placeholder mr-2 font-size-lg"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="separator separator-solid"></div>
                            <div class="d-flex align-items-center flex-start flex-wrap mt-2 border-bottom-0">


                                <a target="_blank" class="btn btn-icon btn-circle btn-light-facebook ml-2" data-toggle="tooltip" title="facebook">

                                    <i class="socicon-facebook"></i>
                                </a>
                                <a target="_blank" class="btn btn-icon btn-circle btn-light-twitter mr-2" data-toggle="tooltip" title="twitter">

                                    <i class="socicon-twitter"></i>
                                </a>
                                <a target="_blank" class="btn btn-icon btn-circle btn-light-dark mr-2 mb-8" data-toggle="tooltip" title="github">

                                    <i class="socicon-github"></i>
                                </a>
                                <a target="_blank" class="btn btn-icon btn-circle btn-light-linkedin mr-2" data-toggle="tooltip" title="linkedin">

                                    <i class="socicon-linkedin"></i>
                                </a>
                                <a target="_blank" class="btn btn-icon btn-circle btn-light-linkedin mr-2" data-toggle="tooltip" title="instagram">

                                    <i class="socicon-instagram"></i>
                                </a>
                                <a target="_blank" class="btn btn-icon btn-circle btn-light-warning mr-2" data-toggle="tooltip" title="website-link">

                                    <i class="fas fa-link"></i>
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">

                <div class="card card-custom h-100">

                    <div class="card-header">
                        <div class="card-title">
                            <span class="card-icon">
                                <i class="flaticon2-chat-1 text-primary"></i>
                            </span>
                            <h3 class="card-label">
                                About
                            </h3>
                        </div>
                        <div class="card-toolbar">

                        </div>
                    </div>
                    <div class="card-body">
                        @((MarkupString)Model.Description)
                        <div> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>